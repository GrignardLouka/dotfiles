    xkb_layout be
    # xkb_layout custom
    # xkb_variant dvp
    xkb_numlock enable
    repeat_rate 75
    repeat_delay 250
}

# touchpad laptop
input type:touchpad {
    dwt enabled
    tap enabled
    tap_button_map lrm
}



